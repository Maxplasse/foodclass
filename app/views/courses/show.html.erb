<div class="container">
  <div class="card-show">
    <h3 class="card-show-title"><%= @course.title %></h3>
      <div class="row">
        <div class="d-flex justify-content-between col-6">
          <p><strong><%= @course.start_at.strftime("%A, %d %b %Y %l:%M %p") %></strong></p>
        </div>
      </div>
      <div class="row">
        <div class="col-6">
          <%= cl_image_tag @course.photo.key %>
        </div>
        <div class="col-6">
          <div class="card-show-infos">
            <div>
              <h3 class="chef">Chef <%= @course.chef.user.first_name %> <%= @course.chef.user.last_name %></h3>
              <p>Temps de réalisation : <%= @course.duration %> minutes</p>
              <p>Matériel nécessaire :</p>
            </div>
          </div>
          <div class="main-checkbox">
            <h3>Ingrédients</h3>
            <div class="detail-checkbox">
              <input type="checkbox" id="Tomates" name="Tomates" checked>
              <label for="Tomates">Tomates</label>
            <div>
              <input type="checkbox" id="Champignons" name="Champignons">
              <label for="Champignons">Champignons</label>
            </div>
            </div>
          </div>
            <div class="show-btn">
              <button class="button">réserver</button>
            </div>
        </div>
      </div>
  </div>
</div>
