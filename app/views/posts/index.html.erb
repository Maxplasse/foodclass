<div class="container">
  <h1>Posts#index</h1>
  <p>Find me in app/views/posts/index.html.erb</p>
  <% @posts.each do |post| %>
    <div class="card-community">
      <div class="d-flex">
        <div class="px-3">
          <%= image_tag post.participation.user.photo, class: "avatar-large" %>
        </div>
        <div>
          <p><%= post.participation.user.nickname %> a comment√© la recette <%= link_to post.course.title, courses_path %> par
          <em>
            <%= post.course.chef.user.first_name %>
            <%= post.course.chef.user.last_name %>
          </em>
            <%= post.posted_at %>
          </p>
          <ul class="list-inline">
            <li><%= cl_image_tag(post.photo.key, style: "width: 250px; height: 150px;") %></li>
            <li><%= post.content %></li>
            <li><%= post.course.difficulty %></li>
            <li><%= post.course.duration %>minutes</li>
            <li><p><%= post.course.level_points %> points</p></li>
          </ul>
          <%= simple_form_for [post, comment = Comment.new] do |f| %>
            <%= f.input :content %>
            <%= f.submit "Commenter"%>
          <% end %>
        </div>
      </div>
    </div>
    <div class="card-community-container">
      <% post.comments.each do |comment| %>
        <div class="card-community-comments">
          <div>
            <%= image_tag comment.user.photo, class: "avatar-large" %>
          </div>
          <%= link_to "Supprimer",
                  # post_comment_path(@post, comment),
                  method: :delete %>
          <%= comment.content %>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
