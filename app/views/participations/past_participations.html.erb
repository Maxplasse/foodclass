<div class="container container-top">
  <%= render "shared/dashboard_navigation" %>
  <div class="dashboard-navigation">
      <div class="d-flex justify-content-between">
        <div style="width: 100%">
          <%= form_tag past_participations_participations_path, method: :get do %>
            <%= text_field_tag :query,
              params[:query],
              class: "form-control",
              placeholder: "Retrouver un ancien cours, un chef, etc",
              style: "height: 50px; "
            %>
        </div>
        <div style="padding-left: 4px">
          <%= submit_tag "Rechercher", class: "button" %>
        </div>
        <% end %>
      </div>
  </div>
  <br>
  <div>
    <div class="cards">
      <% current_user.participations.order(id: :asc).past.each do |participation| %>
        <%= render "card_course", participation: participation %>
      <% end %>
    </div>
  <div>
</div>
<br>
<br>
